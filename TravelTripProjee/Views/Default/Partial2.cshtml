@using TravelTripProjee.Models.Siniflar
@model List<Blog>

@foreach (var x in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@x.BlogImage" alt="" style="width:300px ; height:150px;"/>
        </div>
        <div class="left-text">

            <h4>@x.Baslik</h4>
            <h6>@x.Tarih.ToString("dd.MM.yyyy")</h6>
            <p>@x.Aciklama.Substring(0,50)</p>
            <p><a href="~/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>
}

